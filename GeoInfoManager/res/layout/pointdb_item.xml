<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content" 
    android:background= "@color/whitebgrnd"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:layout_width="fill_parent">
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	   	android:stretchColumns="2"
	    android:shrinkColumns="1,3">
		<TableRow>
		<ImageView
			android:id="@+id/pdb_symbol"
			android:layout_width="32dip"
			android:layout_height="32dip"
			android:src="@drawable/redflag2">
			</ImageView>
	    <TextView
	      	android:id="@+id/pdb_ptname"
	      	android:textColor="@color/darktext"
	      	android:textStyle="bold"
	      	android:textSize="14sp" /> 
	     <TextView
	      	android:id="@+id/pdb_rowid"
	      	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	      	android:textColor="@color/darktext"
	      	android:layout_below="@id/pdb_symbol"
	      	android:textSize="12sp" /> 
	    </TableRow>
    </TableLayout>
    <View
   		android:layout_width="fill_parent"
       	android:layout_height="1dip"
       	android:background="#FF000000">
    </View>
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
    <TableRow>
	    <TextView
	      	android:id="@+id/pdb_timedate_label"
	      	android:textColor="@color/darktext"
	      	android:textStyle="bold"
	      	android:textSize="12sp" 
	      	android:text="Date and Time: "/> 
		 <TextView
	      	android:id="@+id/pdb_time"
	      	android:textColor="@color/darktext"
	      	android:textStyle="bold"
	      	android:textSize="12sp" /> 
	 </TableRow>
	 <TableRow>
		<TextView
			android:id="@+id/pdb_latlabel"
			android:textColor="@color/darktext"
	    	android:textStyle="bold"
	    	android:textSize="12sp"
	    	android:layout_gravity="center"
	    	android:text="@string/latitude_label"/>
	    <TextView
			android:id="@+id/pdb_lnglabel"
			android:textColor="@color/darktext"
	    	android:textStyle="bold"
	    	android:textSize="12sp"
	    	android:layout_gravity="center"
	    	android:text="@string/longitude_label"/>
	</TableRow>
	<TableRow>
		<TextView
			android:id="@+id/pdb_latvalue"
			android:textColor="@color/darktext"
	    	android:textStyle="normal"
	    	android:textSize="12sp"
	    	android:layout_gravity="right"
	    	android:paddingRight="12sp"
	    	android:text="@string/latitude_label"/>
	    <TextView
			android:id="@+id/pdb_lngvalue"
			android:textColor="@color/darktext"
	    	android:textStyle="normal"
	    	android:textSize="12sp"
	    	android:layout_gravity="right"
	    	android:paddingRight="10sp"
	    	android:text="@string/longitude_label"/>
	</TableRow>
	</TableLayout>
	<View
   		android:layout_width="fill_parent"
       	android:layout_height="1dip"
       	android:background="#FF000000">
    </View>
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:stretchColumns="1,3"
	    android:shrinkColumns="2,4">
	    >
	<TableRow>
	    <TextView
			android:id="@+id/pdb_add_street"
			android:textColor="@color/darktext"
	    	android:textStyle="normal"
	    	android:layout_span="4"
	    	android:textSize="12sp"
	    	android:text=""/>
	</TableRow>
	<TableRow>
	    <TextView
			android:id="@+id/pdb_add_city"
			android:textColor="@color/darktext"
	    	android:textStyle="normal"
	    	android:textSize="12sp"
	    	android:layout_span="2"
	    	android:text=""/>
	    <TextView
			android:id="@+id/pdb_add_state"
			android:textColor="@color/darktext"
	    	android:textStyle="normal"
	    	android:textSize="12sp"
	    	android:text=""/>
	    <TextView
			android:id="@+id/pdb_add_postal_code"
			android:textColor="@color/darktext"
	    	android:textStyle="normal"
	    	android:textSize="12sp"
	    	android:text=""/>
	</TableRow>
</TableLayout>
	<View
		android:layout_width="fill_parent"
    	android:layout_height="4dip"
    	android:background="#FF000000">
    </View>
    <View
		android:layout_width="fill_parent"
    	android:layout_height="8dip"
    	android:background="#FFFFFFFF">
    </View>
</LinearLayout>
