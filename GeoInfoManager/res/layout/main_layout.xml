<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent" 
    android:layout_width="fill_parent"
    android:background= "@color/whitebgrnd"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    >
    <RelativeLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ImageButton
	    android:id="@+id/gps_tapemeasure_button"
	    android:layout_width="wrap_content"  
        android:layout_height="80dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_centerInParent="true"
	    android:src= "@drawable/tapemeasurebtn"
		/>	
	<ImageButton
	    android:id="@+id/database_button"
	    android:layout_width="wrap_content"  
        android:layout_height="80dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_above="@id/gps_tapemeasure_button"
        android:layout_alignLeft="@id/gps_tapemeasure_button"
	    android:src= "@drawable/database_btn"
	     />	
	<ImageButton
	    android:id="@+id/location_button"
	    android:layout_width="wrap_content"  
        android:layout_height="80dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_above="@id/database_button"
        android:layout_alignLeft="@id/gps_tapemeasure_button"
	    android:src= "@drawable/locationbtn"
	     />	
	<ImageButton
	    android:id="@+id/gpx_file_button"
	    android:layout_width="wrap_content"  
        android:layout_height="80dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_alignLeft="@id/gps_tapemeasure_button"
        android:layout_below="@id/gps_tapemeasure_button"
	    android:src= "@drawable/gpx_btn"
	     />	
	<ImageButton
	    android:id="@+id/coordsystem_button"
	    android:layout_width="wrap_content"  
        android:layout_height="80dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_alignLeft="@id/gps_tapemeasure_button"
        android:layout_below="@id/gpx_file_button"
	    android:src= "@drawable/coordsysbtn"
	     />	
	</RelativeLayout>
</LinearLayout>
